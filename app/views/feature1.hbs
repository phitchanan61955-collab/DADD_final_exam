<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>{{title}}</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">
    <link href="/styles.css" rel="stylesheet">
  </head>

  <body class="bg-light">
    <div class="container py-4">

      <div class="d-flex justify-content-between align-items-center mb-3">
        <div>
          <h1 class="h4 mb-1">{{title}}</h1>
          <p class="text-muted mb-0">Select a country and view DADD values over historical decades (sorted by decade DESC).</p>
        </div>
        
      </div>

      <div class="card shadow-sm border-0 mb-3">
        <div class="card-body">
          <h2 class="h6 mb-3">Select Country</h2>

          <form method="get" action="/feature1" class="row g-2 align-items-end">
          <div class="col-12 col-md-8">
          <label class="form-label">Country</label>
          <select class="form-select" name="country_id">
         <option value="">-- Select country --</option>
      {{#each countries}}
        <option value="{{this.country_id}}"
          {{#ifEquals this.country_id ../selectedCountry}}selected{{/ifEquals}}>
          {{this.country_name}}
        </option>
      {{/each}}
    </select>
  </div>

  <div class="col-12 col-md-4">
    <button type="submit" class="btn btn-primary w-100">Show Trend</button>
  </div>
</form>
        </div>
      </div>

      {{#if selectedCountry}}
        <div class="card shadow-sm border-0">
          <div class="card-body">
            <h2 class="h6 mb-3">
              DADD Trend
              {{#if selectedCountryName}}
                <span class="text-muted">— {{selectedCountryName}}</span>
              {{/if}}
            </h2>

            {{#if results.length}}
              <div class="table-responsive">
                <table class="table table-sm table-striped align-middle mb-0">
                  <thead class="table-light">
                    <tr>
                      <th>Decade</th>
                      <th>DADD Value</th>
                    </tr>
                  </thead>
                  <tbody class="small">
                    {{#each results}}
                      <tr>
                        <td>{{this.decade_id}}</td>
                        <td>{{this.dadd_value}}</td>
                      </tr>
                    {{/each}}
                  </tbody>
                </table>
              </div>
            {{else}}
              <p class="text-muted small mb-0">No DADD records found for this country.</p>
            {{/if}}
          </div>
        </div>
      {{/if}}

    </div>
  </body>
</html>
