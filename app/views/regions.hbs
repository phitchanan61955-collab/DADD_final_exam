<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8" />
  <title>{{title}}</title>

  <!-- Bootstrap -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <!-- YOUR CSS (ถ้ามี) -->
  <link href="/styles.css" rel="stylesheet">
</head>

<body class="bg-light">

  <!-- Top bar -->
  <nav class="navbar navbar-dark bg-dark">
    <div class="container">
      <a class="navbar-brand fw-semibold" href="/admin">Admin Panel</a>

      <div class="d-flex gap-2">
        <a href="/" class="btn btn-outline-light btn-sm">Back to Dashboard</a>
      </div>
    </div>
  </nav>

  <div class="container py-4">

    <!-- Header -->
    <div class="d-flex flex-column flex-md-row justify-content-between align-items-md-center gap-2 mb-3">
      <div>
        <h1 class="h4 mb-1">Region Management</h1>
        <div class="text-muted small">Manage REGION master data (CRUD).</div>
      </div>

      <div class="d-flex gap-2">
        <a href="/regions/add" class="btn btn-primary btn-sm">
          + Add Region
        </a>
      </div>
    </div>

    <!-- Table card -->
    <div class="card border-0 shadow-sm">
      <div class="card-body">

        <div class="table-responsive">
          <table class="table table-hover align-middle mb-0">
            <thead class="table-light">
              <tr>
                <th style="width:120px;">Region ID</th>
                <th>Region Name</th>
                <th class="text-end" style="width:220px;">Actions</th>
              </tr>
            </thead>

            <tbody>
              {{#each regions}}
              <tr>
                <td>
                  <span class="badge bg-secondary">{{this.region_id}}</span>
                </td>
                <td class="fw-semibold">{{this.region_name}}</td>

                <td class="text-end">
                  <a href="/regions/{{this.region_id}}/edit" class="btn btn-outline-secondary btn-sm">
                    Edit
                  </a>

                  <form method="post" action="/regions/{{this.region_id}}/delete" class="d-inline">
                    <button class="btn btn-outline-danger btn-sm"
                            onclick="return confirm('Delete this region?');">
                      Delete
                    </button>
                  </form>
                </td>
              </tr>
              {{/each}}

              {{#unless regions.length}}
              <tr>
                <td colspan="3" class="text-center text-muted py-4">
                  No regions found.
                </td>
              </tr>
              {{/unless}}
            </tbody>

          </table>
        </div>

      </div>
    </div>

  </div>
</body>
</html>
