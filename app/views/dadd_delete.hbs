<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>{{title}}</title>
  </head>
  <body>
    <h1>{{title}}</h1>

    <p><a href="/">‚Üê Back to Home</a></p>

    {{#if errorMessage}}
      <p style="color:red;"><strong>{{errorMessage}}</strong></p>
    {{/if}}

    {{#if deleteCount}}
      <p style="color:green;">
        <strong>Deleted {{deleteCount}} record(s).</strong>
      </p>
    {{/if}}

    <h2>Delete Conditions</h2>

    <form method="post" action="/dadd/delete">
      <p>
        <label for="country_id">Country (optional):</label>
        <select name="country_id" id="country_id">
          <option value="">-- All countries --</option>
          {{#each countries}}
            <option value="{{this.country_id}}"
              {{#ifEquals this.country_id ../selectedCountry}}selected{{/ifEquals}}>
              {{this.country_name}} (ID: {{this.country_id}})
            </option>
          {{/each}}
        </select>
      </p>

      <p>
        <label for="start_decade">Start Decade:</label>
        <select name="start_decade" id="start_decade" required>
          <option value="">-- Select start decade --</option>
          {{#each decades}}
            <option value="{{this.decade_id}}"
              {{#ifEquals this.decade_id ../startDecade}}selected{{/ifEquals}}>
              {{this.decade_id}}
            </option>
          {{/each}}
        </select>
      </p>

      <p>
        <label for="end_decade">End Decade:</label>
        <select name="end_decade" id="end_decade" required>
          <option value="">-- Select end decade --</option>
          {{#each decades}}
            <option value="{{this.decade_id}}"
              {{#ifEquals this.decade_id ../endDecade}}selected{{/ifEquals}}>
              {{this.decade_id}}
            </option>
          {{/each}}
        </select>
      </p>

      <p>
        <button type="submit"
          onclick="return confirm('Are you sure you want to delete DADD records in this range?');">
          Delete DADD Records
        </button>
      </p>
    </form>

  </body>
</html>
