  <!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <title>{{title}}</title>

  <!-- Bootstrap 5 -->
  <link
    rel="stylesheet"
    href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
  >
</head>
<body class="bg-light">

  <!-- Top Bar -->
  <nav class="navbar navbar-light bg-white border-bottom">
    <div class="container py-2 d-flex justify-content-between align-items-center">
      <div>
      </div>
      
    </div>
  </nav>

  <div class="container py-4">

    <!-- Header -->
    <div class="mb-3">
      <h3 class="mb-1">Search Country</h3>
      <p class="text-muted mb-0">
        Keyword search on country names (partial match)  
        and show DADD for the most recent decade.
      </p>
    </div>

    <!-- Search Card -->
    <div class="card shadow-sm border-0 mb-4">
      <div class="card-body">
        <div class="fw-semibold mb-2">Search</div>

        <form method="get" action="/feature4" class="row g-2 align-items-end">
          <div class="col-12 col-md-8">
            <label class="form-label small mb-1">
              Country name (or part of name)
            </label>
            <input
              type="text"
              class="form-control"
              name="q"
              placeholder="e.g., Thai, United, Congo..."
              value="{{query}}"
              required
            >
          </div>
          <div class="col-12 col-md-2 d-grid">
            <button class="btn btn-primary" type="submit">Search</button>
          </div>
          <div class="col-12 col-md-2 d-grid">
            <a class="btn btn-outline-secondary" href="/feature4">Reset</a>
          </div>
        </form>
      </div>
    </div>

    <!-- Results -->
    <div class="card shadow-sm border-0">
      <div class="card-body">
        <div class="d-flex justify-content-between align-items-center mb-2">
          <div class="fw-semibold">Results</div>
          {{#if results.length}}
            <div class="text-muted small">
              Showing {{results.length}} countries
            </div>
          {{/if}}
        </div>

        {{#if results.length}}
          <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
              <thead class="table-light">
                <tr>
                  <th>Country</th>
                  <th style="width:140px;">Latest Decade</th>
                  <th style="width:180px;" class="text-end">DADD Value</th>
                </tr>
              </thead>
              <tbody>
                {{#each results}}
                  <tr>
                    <td class="fw-semibold">{{this.country_name}}</td>
                    <td>
                      <span class="badge bg-secondary">{{this.decade}}</span>
                    </td>
                    <td class="text-end">
                      <span class="badge bg-light text-dark border">
                        {{this.dadd_value}}
                      </span>
                    </td>
                  </tr>
                {{/each}}
              </tbody>
            </table>
          </div>
        {{else}}
          <div class="alert alert-light border mb-0">
            <div class="fw-semibold mb-1">No results</div>
            <div class="text-muted small">
              Please type a country name and click Search.
            </div>
          </div>
        {{/if}}

      </div>
    </div>

  </div>
</body>
</html>

